#include <stdio.h>
struct Student{
    int roll;
    char name[20];
    float marks;
};
int main(){
    struct Student s;
    struct Student *ptr;
    ptr=&s;
    printf("Enter Roll No: ");
    scanf("%d",&ptr->roll);
    printf("Enter Name: ");
    scanf("%s",&ptr->name);
    printf("Enter Marks: ");
    scanf("%f",&ptr->marks);
}
